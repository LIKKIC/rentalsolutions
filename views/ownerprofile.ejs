            </div>

            <div class="click">
                <h3 class="addroomhead">Click here to add PG</h3>
                
                <a class="addroom" href="/addpg?Owner_ID=<%- o[0].Owner_ID %>">PG</a>
            </div> 
            <div class="click">
                <h3 class="addroomhead">Click here to add Flat</h3>
                
                <a class="addroom" href="/addflat?Owner_ID=<%- o[0].Owner_ID %>">Flat</a>
                
            </div>            
            <div class="heading">
                <h1>PGs</h1>
            </div>
            
            <table  border="1" class="profile_page">
                <tr class="tr">
                    <th class="th">Name</th>
                    <th class="th">Landmark</th>
                    <th class="th">Address</th>
                    <th class="th" >Actions</th>
                </tr>
            
            <% if(Room.length>0){ %>
                <% for(var i = 0;i < Room.length;i++){%>
                    <tr class="tr">
                        <td > <a id="roomlink" href="/pg<%= Room[i].Name %>"><%- Room[i].Name %></a></td>
                        <td><%- Room[i].landmark %></td>
                        <td><%- Room[i].Address %></td>
                        <td>
                            <a class="delete" href="/deletepg?PG_ID=<%- Room[i].PG_ID %>">delete</a>
                            <a class="delete" id="update" href="/updatepg?PG_ID=<%- Room[i].PG_ID %>">update</a>
                        </td>
                    </tr>
                    <%} %>
            <% }else{ %>
                    <tr>
                        <td>Data not found</td>
                    </tr>
             <% } %>
            </table>

            <h1 class="heading">Flats</h1>
            <table border="1" width="100%" class="profile_page">
                <tr>
                    <th class="th">Name</th>
                    <th class="th">Landmark</th>
                    <th class="th">Address</th>
                    <th class="th" >Actions</th>
                </tr>
            
            <% if(flat.length>0){ %>
                <% for(var i = 0;i < flat.length;i++){%>
                    <tr class="tr">
                        <td ><a id="roomlink" href="/flat<%= flat[i].Name %>"><%- flat[i].Name %></a></td>
                        <td><%- flat[i].landmark %></td>
                        <td><%- flat[i].address %></td>
                        <td>
                            <a id="flatdel" class="delete" href="/deleteflat?Flat_ID=<%- flat[i].Flat_ID %>">delete</a>
                            <a class="update" href="/updateflat?Flat_ID=<%- flat[i].Flat_ID %>">update</a>
                        </td>
                    </tr >
                    <%} %>
            <% }else{ %>
                    <tr>
                        <td>Data not found</td>
                    </tr>
             <% } %>
            </table>

